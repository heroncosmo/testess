# Environment Configuration for Peacock Admin System

# API Configuration
VITE_API_URL=http://localhost:3001/api

# Production API URL (uncomment for production)
# VITE_API_URL=https://your-production-domain.com/api

# JWT Secret (change this in production!)
JWT_SECRET=peacock-admin-secret-key-2025-change-in-production

# Server Port
PORT=3001

# Node Environment
NODE_ENV=development

# Security Settings
BCRYPT_ROUNDS=10

# File Upload Settings
MAX_FILE_SIZE=50MB
UPLOAD_PATH=./server/uploads

# CORS Settings (for production, set to your domain)
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Settings
SESSION_TIMEOUT_HOURS=24

# Database Settings (if using database instead of JSON files)
# DATABASE_URL=postgresql://username:password@localhost:5432/peacock_admin

# Email Settings (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# Monitoring
ENABLE_LOGGING=true
LOG_LEVEL=info

# CDN Settings (for production)
# CDN_URL=https://cdn.your-domain.com
# STATIC_ASSETS_URL=https://static.your-domain.com
